@model OrderViewModel

@{
    ViewBag.Title = "Create New Student - MVC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(controllerName:"Order", actionName:"CreateOrder", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.ProductID, htmlAttributes: new { @class = "control-label col-md-2" })
            <select asp-for="ProductID" class="form-control">
                @foreach(var item in ViewBag.Products)
                {
                    <option value="@item.ProductId">@item.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerID, htmlAttributes: new { @class = "control-label col-md-2" })
            <select asp-for="CustomerID" class="form-control">
                @foreach(var item in ViewBag.Customers)
                {
                    <option value="@item.CustomerId">@item.CustomerId</option>
                }
            </select>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>